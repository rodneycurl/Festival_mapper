<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<!--<p id="notice"><%= notice %></p>-->
<div id="control">
  <h1>Hip Hop Festival Guide</h1>
  <p>Find the best hip hop festivals in your city. See the best hip hop artists from around the world</p>
  <div class="clear"></div>
  <div id="results"></div>
   <%= form_tag root_path, :method  => 'get' do %>
  <div class="row">
    <div class="col-lg-12">
      <%= label_tag(:state, "Select state") %> 
      <%= select_tag "state", options_for_select(@states), {:class => 'form-control', include_blank: "All"}  %>
    </div>
    <div class="col-lg-12 margin-top">
    <%= submit_tag "Filter", :class => "btn btn-default" %>
    </div>
  </div>
  <% end %>
  <h2>Festivals Near You</h2>
  <%= render 'layouts/music_festivals/festival_table' %>
</div>  
<div id="map-canvas">
    <!--<div id='sidebar_container'></div>-->
  <div id="map-container">
    <div id="map"></div>
  </div>
  <%= render 'layouts/music_festivals/map' %>
</div>
<script async defer src="//maps.google.com/maps/api/js?key=AIzaSyD8pKOZ2PA1M4F1l_r9hAbwbkV_L4Mdxjs&callback=initMap"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
