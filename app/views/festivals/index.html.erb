<div id="control">
  <h2>Find Events Near You</h2>
  <p>We'll help you find events in your community</p>
  <%= button_tag "Use current location", remote: true, class: "learnButton", id: "use-zip" %>  
  <%= form_tag("/festivals/near_zip", method: "get", remote: true) do %>
    <%= label_tag(:chooseZip, "Search by Zip Code") %>
    <%= text_field_tag("textZip", nil, placeholder: 'enter your zip code') %>
    <%= submit_tag("Search", class: "learnButton") %>
  <% end %>
  <%= render 'layouts/social' %>
  <div class="clear"></div>
  <div id="results"></div>
  <h1>Events Near You</h1>
  <%= render 'layouts/table' %>
</div>  
<div id="map-canvas">
  <div id="map-container">
    <div id="map"></div>
  </div>
  <%= render 'layouts/map' %>
</div>
